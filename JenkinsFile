pipeline {
    agent { label 'slave1' }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/srinathsidhu12/react_app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build React App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                // Assuming Jenkins has permission to write to this directory
                sh 'cp -r build/* /usr/share/nginx/html'
            }
        }
    }

    post {
        success {
            echo '✅ React App deployed successfully!'
        }
        failure {
            echo '❌ Deployment failed.'
        }
    }
}
